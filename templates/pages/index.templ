package pages

import (
	"daily-notes/templates/layouts"
	"daily-notes/templates/components"
)

templ Index(googleClientID string) {
	@layouts.Base("dailynotes.dev - Your daily work notes, organized & synced", googleClientID) {
		@components.AuthSection()
		<section id="app-section" role="main" aria-label="Application">
			@components.MobileNavigation()
			<div class="app-layout" id="main-content">
				@components.Sidebar()
				@components.Editor()
				@components.CalendarPanel()
			</div>
		</section>
		// Sync status indicator removed - not needed with SQLite local-first approach
		@components.LandingLoader()
		@components.Modals()
	}
}
